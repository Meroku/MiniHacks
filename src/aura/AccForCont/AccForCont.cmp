<aura:component implements="flexipage:availableForRecordHome,force:hasRecordId" access="global">
    <aura:attribute name="recordId" type="Id"/>
    <aura:attribute name="cont" type="Contact"/>
    <aura:attribute name="accountFields" type="String[]" default="Name,Phone,Id"/>
    <force:recordData aura:id="contRecord"
                        recordId="{!v.recordId}"
                        targetFields="{!v.cont}"
                        layoutType="FULL"/>
    <lightning:card iconName="standard:user" title="{! 'Account for ' + v.cont.Name}">
        <div class="slds-p-left_large slds-p-right_medium">
            <lightning:recordForm aura:id="contactForm"
                                recordId="{!v.cont.Account}"
                                objectApiName="Account"
                                fields="{!v.accountFields}"
                                mode="View"/>
        </div>
    </lightning:card>
</aura:component>